# .env.example
# AI Stock Selector Environment Variables Configuration
# Copy this file to .env and modify the values

# ===== DATABASE CONFIGURATION =====
# PostgreSQL Configuration
POSTGRES_USER=stock_user
POSTGRES_PASSWORD=your_secure_password_here
POSTGRES_DB=ai_stock_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# InfluxDB Configuration (for time-series data)
INFLUXDB_USER=admin
INFLUXDB_PASSWORD=your_influxdb_password
INFLUXDB_ORG=stock_org
INFLUXDB_BUCKET=stock_timeseries
INFLUXDB_TOKEN=your_influxdb_token
INFLUXDB_URL=http://influxdb:8086

# ===== CACHE CONFIGURATION =====
# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# ===== API CONFIGURATION =====
# FastAPI Configuration
SECRET_KEY=your_very_secure_secret_key_here_change_this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
DEBUG=false
API_V1_STR=/api/v1
PROJECT_NAME=AI Stock Selector
VERSION=1.0.0

# CORS Configuration
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","https://yourdomain.com"]

# ===== CELERY CONFIGURATION =====
# Celery Task Queue
CELERY_BROKER_URL=redis://${REDIS_HOST}:${REDIS_PORT}/1
CELERY_RESULT_BACKEND=redis://${REDIS_HOST}:${REDIS_PORT}/1

# ===== DATA SOURCE CONFIGURATION =====
# Yahoo Finance (Free)
YAHOO_FINANCE_ENABLED=true
YAHOO_FINANCE_DELAY=1  # seconds between requests

# TWSE (Taiwan Stock Exchange)
TWSE_ENABLED=true
TWSE_BASE_URL=https://www.twse.com.tw
TWSE_DELAY=2  # seconds between requests

# TEJ (Taiwan Economic Journal) - Premium Data
TEJ_ENABLED=false
TEJ_API_KEY=your_tej_api_key_here
TEJ_BASE_URL=https://api.tej.com.tw
TEJ_USERNAME=your_tej_username
TEJ_PASSWORD=your_tej_password

# AWS S3 備份（可選，先不用）
AWS_ACCESS_KEY_ID=（暫時不用設定）
AWS_SECRET_ACCESS_KEY=（暫時不用設定）

# ===== SCHEDULING CONFIGURATION =====
# Data Update Schedule (CRON format)
DAILY_UPDATE_SCHEDULE=0 17 * * 1-5  # Weekdays at 5 PM
WEEKLY_REPORT_SCHEDULE=0 9 * * 1    # Monday at 9 AM
MONTHLY_CLEANUP_SCHEDULE=0 2 1 * *  # First day of month at 2 AM

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=/app/logs/app.log
LOG_MAX_BYTES=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ===== PERFORMANCE CONFIGURATION =====
# Database Connection Pool
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30

# Request Rate Limiting
RATE_LIMIT_PER_MINUTE=100
RATE_LIMIT_BURST=10

# ===== DEVELOPMENT CONFIGURATION =====
# Development Tools
DEVELOPMENT_MODE=false
ENABLE_PROFILING=false
MOCK_EXTERNAL_API=false

# Testing Configuration
TEST_DATABASE_URL=postgresql://test_user:test_pass@localhost:5433/test_ai_stock_db

# ===== SECURITY CONFIGURATION =====
# API Security
ENABLE_HTTPS=false
SSL_CERT_PATH=/certs/cert.pem
SSL_KEY_PATH=/certs/key.pem

# Authentication (for future admin features)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_admin_password
JWT_SECRET_KEY=your_jwt_secret_key

# ===== MONITORING CONFIGURATION =====
# Health Check
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics

# External Monitoring (optional)
SENTRY_DSN=
PROMETHEUS_ENABLED=false
GRAFANA_ENABLED=false

# ===== EMAIL CONFIGURATION (for alerts) =====
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=jeffhong58@gmail.com
SMTP_PASSWORD=letmeuse315
ALERT_EMAIL_RECIPIENTS=admin@yourdomain.com