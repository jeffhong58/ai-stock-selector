# frontend/.env.example
# 前端環境變數範例檔案
# 請複製此檔案為 .env.local 並設定實際值

# ===== API 設定 =====
# 後端API基礎URL
REACT_APP_API_BASE_URL=http://localhost:8000
REACT_APP_API_VERSION=v1

# WebSocket連線 (即時資料更新)
REACT_APP_WS_URL=ws://localhost:8000/ws

# ===== 應用程式設定 =====
# 應用程式名稱
REACT_APP_NAME=AI選股系統
REACT_APP_VERSION=1.0.0
REACT_APP_DESCRIPTION=基於人工智慧的台灣股市選股系統

# 環境模式 (development, staging, production)
REACT_APP_ENVIRONMENT=development

# 是否啟用除錯模式
REACT_APP_DEBUG=true

# ===== 外部服務設定 =====
# Google Analytics 追蹤ID
REACT_APP_GA_TRACKING_ID=UA-XXXXXXXX-X

# Mixpanel 分析
REACT_APP_MIXPANEL_TOKEN=your_mixpanel_token

# Sentry 錯誤追蹤
REACT_APP_SENTRY_DSN=https://your-sentry-dsn

# ===== 圖表和資料視覺化 =====
# TradingView 圖表設定 (第二階段)
REACT_APP_TRADINGVIEW_ENABLED=false
REACT_APP_TRADINGVIEW_THEME=light

# ECharts 圖表設定
REACT_APP_ECHARTS_THEME=default

# ===== 功能開關 =====
# 是否啟用即時資料
REACT_APP_ENABLE_REALTIME=false

# 是否啟用推播通知
REACT_APP_ENABLE_NOTIFICATIONS=true

# 是否啟用暗黑模式
REACT_APP_ENABLE_DARK_MODE=true

# 是否啟用PWA功能
REACT_APP_ENABLE_PWA=true

# ===== 快取設定 =====
# API快取時間 (秒)
REACT_APP_CACHE_TTL=300

# 本地儲存前綴
REACT_APP_STORAGE_PREFIX=ai_stock_

# ===== UI設定 =====
# 預設語言
REACT_APP_DEFAULT_LOCALE=zh-TW

# 預設主題色彩
REACT_APP_PRIMARY_COLOR=#1890ff
REACT_APP_SUCCESS_COLOR=#52c41a
REACT_APP_WARNING_COLOR=#faad14
REACT_APP_ERROR_COLOR=#ff4d4f

# 表格每頁顯示數量
REACT_APP_TABLE_PAGE_SIZE=20

# ===== 效能設定 =====
# 是否啟用React.StrictMode
REACT_APP_STRICT_MODE=true

# 是否啟用Service Worker
REACT_APP_ENABLE_SERVICE_WORKER=true

# Bundle分析
REACT_APP_ANALYZE_BUNDLE=false

# ===== 開發工具 =====
# 是否顯示React Query DevTools
REACT_APP_SHOW_REACT_QUERY_DEVTOOLS=true

# 是否啟用Redux DevTools
REACT_APP_ENABLE_REDUX_DEVTOOLS=true

# 是否啟用Console日誌
REACT_APP_ENABLE_CONSOLE_LOGS=true

# ===== 安全設定 =====
# CSRF Token名稱
REACT_APP_CSRF_TOKEN_NAME=csrftoken

# 是否啟用HTTPS
REACT_APP_ENABLE_HTTPS=false

# ===== 第三方整合 =====
# Yahoo Finance (透過後端代理)
REACT_APP_YAHOO_FINANCE_ENABLED=true

# 證交所資料
REACT_APP_TWSE_ENABLED=true

# TEJ資料 (付費服務)
REACT_APP_TEJ_ENABLED=false

# ===== 通知設定 =====
# 瀏覽器通知
REACT_APP_BROWSER_NOTIFICATIONS=true

# Email通知 (透過後端)
REACT_APP_EMAIL_NOTIFICATIONS=false

# ===== 其他設定 =====
# 錯誤邊界設定
REACT_APP_ERROR_BOUNDARY_ENABLED=true

# 離線模式支援
REACT_APP_OFFLINE_SUPPORT=true

# 自動重新載入間隔 (毫秒)
REACT_APP_AUTO_REFRESH_INTERVAL=300000