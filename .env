# .env
# AI選股系統環境變數 - 簡化版配置

# ===== 基本設定 =====
ENVIRONMENT=development
DEBUG=true
SECRET_KEY=ai-stock-selector-secret-key-change-in-production
PROJECT_NAME=AI選股系統
VERSION=1.0.0

# ===== 資料庫設定 =====
POSTGRES_USER=stock_user
POSTGRES_PASSWORD=StockPassword123!
POSTGRES_DB=ai_stock_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
DATABASE_URL=postgresql://${POSTGRES_USER}:${POSTGRES_PASSWORD}@${POSTGRES_HOST}:${POSTGRES_PORT}/${POSTGRES_DB}

# ===== InfluxDB設定 =====
INFLUXDB_USER=admin
INFLUXDB_PASSWORD=InfluxPassword123!
INFLUXDB_ORG=stock_org
INFLUXDB_BUCKET=stock_timeseries
INFLUXDB_TOKEN=my-super-secret-auth-token
INFLUXDB_URL=http://influxdb:8086

# ===== Redis設定 =====
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# ===== Celery設定 =====
CELERY_BROKER_URL=redis://redis:6379/1
CELERY_RESULT_BACKEND=redis://redis:6379/1

# ===== API設定 =====
API_V1_STR=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://127.0.0.1:3000"]

# ===== 資料源設定 =====
YAHOO_FINANCE_ENABLED=true
YAHOO_FINANCE_DELAY=1
TWSE_ENABLED=true
TWSE_DELAY=2
TEJ_ENABLED=false

# ===== 日誌設定 =====
LOG_LEVEL=INFO
LOG_FILE=/app/logs/app.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# ===== 排程設定 =====
DAILY_UPDATE_SCHEDULE=0 17 * * 1-5
WEEKLY_REPORT_SCHEDULE=0 9 * * 1
MONTHLY_CLEANUP_SCHEDULE=0 2 1 * *

# ===== 效能設定 =====
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
RATE_LIMIT_PER_MINUTE=100
MAX_CONCURRENT_REQUESTS=5
REQUEST_DELAY_SECONDS=1.0
TIMEOUT_SECONDS=30

# ===== 快取設定 =====
CACHE_TTL_SECONDS=300
CACHE_RECOMMENDATIONS_TTL=3600
RECOMMENDATION_RETENTION_DAYS=90