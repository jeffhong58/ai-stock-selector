# deployment/.env.prod.example
# Production Environment Variables for AI Stock Selector
# Copy this file to .env.prod and modify the values

# ===== ENVIRONMENT =====
ENVIRONMENT=production
DEBUG=false

# ===== DATABASE CONFIGURATION =====
POSTGRES_USER=stock_prod_user
POSTGRES_PASSWORD=your_very_secure_postgres_password_change_this
POSTGRES_DB=ai_stock_prod_db
POSTGRES_HOST=postgres
POSTGRES_PORT=5432

# InfluxDB Production Configuration
INFLUXDB_USER=admin
INFLUXDB_PASSWORD=your_very_secure_influxdb_password
INFLUXDB_ORG=stock_prod_org
INFLUXDB_BUCKET=stock_prod_timeseries
INFLUXDB_TOKEN=your_very_secure_influxdb_token_change_this
INFLUXDB_URL=http://influxdb:8086

# Redis Production Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=your_very_secure_redis_password
REDIS_DB=0

# ===== API CONFIGURATION =====
SECRET_KEY=your_extremely_secure_secret_key_for_production_change_this_immediately
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
API_V1_STR=/api/v1
PROJECT_NAME=AI Stock Selector
VERSION=1.0.0

# CORS Configuration for Production
BACKEND_CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com","https://api.yourdomain.com"]

# ===== CELERY CONFIGURATION =====
CELERY_BROKER_URL=redis://:${REDIS_PASSWORD}@redis:6379/1
CELERY_RESULT_BACKEND=redis://:${REDIS_PASSWORD}@redis:6379/1

# ===== EXTERNAL API CONFIGURATION =====
# Yahoo Finance
YAHOO_FINANCE_ENABLED=true
YAHOO_FINANCE_DELAY=2

# TWSE (Taiwan Stock Exchange)
TWSE_ENABLED=true
TWSE_BASE_URL=https://www.twse.com.tw
TWSE_DELAY=3

# TEJ (Taiwan Economic Journal) - Production
TEJ_ENABLED=true
TEJ_API_KEY=your_production_tej_api_key
TEJ_BASE_URL=https://api.tej.com.tw
TEJ_USERNAME=your_tej_production_username
TEJ_PASSWORD=your_tej_production_password

# ===== SECURITY CONFIGURATION =====
# SSL Configuration
ENABLE_HTTPS=true
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Authentication
ADMIN_USERNAME=admin
ADMIN_PASSWORD=your_very_secure_admin_password
JWT_SECRET_KEY=your_very_secure_jwt_secret_key

# ===== LOGGING CONFIGURATION =====
LOG_LEVEL=WARNING
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_FILE_PATH=/app/logs/app.log
LOG_MAX_BYTES=52428800  # 50MB
LOG_BACKUP_COUNT=10

# ===== PERFORMANCE CONFIGURATION =====
# Database Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40
DB_POOL_TIMEOUT=60

# Request Rate Limiting
RATE_LIMIT_PER_MINUTE=1000
RATE_LIMIT_BURST=100

# ===== MONITORING CONFIGURATION =====
# Sentry for Error Tracking
SENTRY_DSN=your_sentry_dsn_for_production

# Prometheus & Grafana
PROMETHEUS_ENABLED=true
GRAFANA_ENABLED=true
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_grafana_password

# Health Check
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics

# ===== EMAIL CONFIGURATION =====
# Production SMTP
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_production_email@yourdomain.com
SMTP_PASSWORD=your_app_specific_password
SMTP_USE_TLS=true

# Alert Email Settings
ALERT_EMAIL_RECIPIENTS=admin@yourdomain.com,alerts@yourdomain.com
ALERT_EMAIL_FROM=noreply@yourdomain.com

# ===== BACKUP CONFIGURATION =====
# Database Backup
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-northeast-1

# ===== DOMAIN CONFIGURATION =====
DOMAIN_NAME=yourdomain.com
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://api.yourdomain.com

# ===== CDN CONFIGURATION =====
CDN_ENABLED=true
CDN_URL=https://cdn.yourdomain.com

# ===== CACHE CONFIGURATION =====
CACHE_TTL=3600  # 1 hour
REDIS_CACHE_PREFIX=ai_stock_prod:

# ===== FEATURE FLAGS =====
FEATURE_AI_RECOMMENDATIONS=true
FEATURE_ADVANCED_CHARTS=true
FEATURE_REAL_TIME_DATA=false
FEATURE_PORTFOLIO_MANAGEMENT=false

# ===== THIRD PARTY INTEGRATIONS =====
# Google Analytics
GA_TRACKING_ID=UA-XXXXXXXX-X

# Mixpanel Analytics
MIXPANEL_TOKEN=your_mixpanel_token

# SendGrid for Email
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=noreply@yourdomain.com

# ===== KUBERNETES CONFIGURATION (if using K8s) =====
KUBERNETES_ENABLED=false
KUBERNETES_NAMESPACE=ai-stock-selector
KUBERNETES_SERVICE_ACCOUNT=ai-stock-selector-sa